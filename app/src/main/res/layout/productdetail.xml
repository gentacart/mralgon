<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/det_scroll"
   android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true" >

   <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.19" >

       <ImageView
           android:id="@+id/det_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:focusable="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

       <Button
           android:id="@+id/btnShare"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_below="@+id/det_image"
           android:minWidth="120dp"
           android:text="Share" />

       <TextView
             android:id="@+id/det_productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/btnShare"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />
      

        <Button
            android:id="@+id/btnOrderProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/det_productname"
            android:layout_marginLeft="21dp"
            android:minWidth="120dp"
            android:text="Order" />

        <Button
            android:id="@+id/btnSavePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Save Picture" />

    </RelativeLayout>
</ScrollView>

