<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView03"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.19" >
        
        <TextView
             android:id="@+id/ctShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceLarge" />
        
         <TextView
             android:id="@+id/ctAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
             android:layout_below="@+id/ctShopName"
            android:layout_marginTop="20dp"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceLarge" />
         
         <TextView
             android:id="@+id/ctPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
             android:layout_below="@+id/ctAddress"
            android:layout_marginTop="20dp"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceLarge" />
         
         <TextView
             android:id="@+id/ctHandphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
             android:layout_below="@+id/ctPhone"
            android:layout_marginTop="20dp"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceLarge" />
         
         <TextView
             android:id="@+id/ctPinbb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
             android:layout_below="@+id/ctHandphone"
            android:layout_marginTop="20dp"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceLarge" />
         
         <TextView
             android:id="@+id/ctEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
             android:layout_below="@+id/ctPinbb"
            android:layout_marginTop="20dp"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceLarge" />
         
         <TextView
             android:id="@+id/ctBank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
             android:layout_below="@+id/ctEmail"
            android:layout_marginTop="20dp"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceLarge" />
         
         <TextView
             android:id="@+id/ctAccount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
             android:layout_below="@+id/ctBank1"
            android:layout_marginTop="20dp"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceLarge" />
         
         <TextView
             android:id="@+id/ctAccountNumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
             android:layout_below="@+id/ctAccount1"
            android:layout_marginTop="20dp"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceLarge" />
         
         <TextView
             android:id="@+id/ctBank2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
             android:layout_below="@+id/ctAccountNumber1"
            android:layout_marginTop="20dp"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceLarge" />
         
         <TextView
             android:id="@+id/ctAccount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
             android:layout_below="@+id/ctBank2"
            android:layout_marginTop="20dp"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceLarge" />
         
         <TextView
             android:id="@+id/ctAccountNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
             android:layout_below="@+id/ctAccount2"
            android:layout_marginTop="20dp"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceLarge" />
         
          <TextView
             android:id="@+id/ctNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
             android:layout_below="@+id/ctAccountNumber2"
            android:layout_marginTop="20dp"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>
</ScrollView>

